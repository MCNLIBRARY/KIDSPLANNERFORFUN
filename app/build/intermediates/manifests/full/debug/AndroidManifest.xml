<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="trial.customlist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/clockicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="trial.customlist.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="trial.customlist.checklist_create"
            android:label="@string/title_activity_checklist_create" >
        </activity>
        <activity
            android:name="trial.customlist.image_library"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_image_library" >
        </activity>
        <activity
            android:name="trial.customlist.MainActivity2Activity"
            android:label="@string/title_activity_main_activity2" >
        </activity>
        <activity
            android:name="trial.customlist.edit_activities"
            android:label="@string/title_activity_edit_activities" >
        </activity>
        <activity
            android:name="trial.customlist.WelcomeScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_welcome_screen"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="trial.customlist.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>